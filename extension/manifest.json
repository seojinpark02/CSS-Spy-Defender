{
  "manifest_version": 3,
  "name": "CSS Spy Defender",
  "version": "1.0.0",
  "description": "Defends against CSS-only fingerprinting attacks (Based on Cascading Spy Sheets, NDSS 2025)",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CSS Spy Defender"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
